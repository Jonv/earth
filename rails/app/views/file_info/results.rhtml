<h1>Results of a Find on <%= @find_value %></h1>

<table>
  <tr>
  <% for column in FileInfo.content_columns %>
    <th><%= column.human_name %></th>
  <% end %>
  </tr>
  
<% for file_info in @file_info %>
  <tr>
  <% for column in FileInfo.content_columns %>
    <td><%=h file_info.send(column.name) %></td>
  <% end %>
    <td><%= link_to 'Show', :action => 'show', :id => file_info %></td>
    <td><%= link_to 'Edit', :action => 'edit', :id => file_info %></td>
    <td><%= link_to 'Destroy', { :action => 'destroy', :id => file_info }, :confirm => 'Are you sure?', :post => true %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New file_info', :action => 'new' %>
