%h1 Configuring Daemon
= error_messages_for :server
- if (daemon_status(@server) == "down") || (daemon_status(@server) == "unknown")
  - form_for(:server, :url => url_for(:action => :startd, :params => {:id => @server.id }), :html => { :method => :put }) do |f|
    %p
      %b Name
      = @server.name
    %p
      %b Status
      = daemon_status(@server)
    %p= submit_tag "Start"
- else
  - form_for(:server, :url => url_for(:action => :stopd, :params => {:id => @server.id }), :html => { :method => :put }) do |f|
    %p
      %b Name
      = @server.name
    %p
      %b Status
      = daemon_status(@server)
    %p= submit_tag "Stop"

= link_to 'Show', :action => :show, :params => {:server => @server.name}
|
= link_to 'Back', servers_path

