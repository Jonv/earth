xml.instruct!

xml.directory("path" => @directory.path) do
  @directory.files.each do |file|
    xml.file("name" => file.name) do
      xml.size_in_bytes(file.size.to_i)
    end
  end
  @directories_and_size.each do |directory, size|
    xml.directory("name" => directory.name) do
      xml.size_in_bytes(size.to_i)
    end
  end
end
