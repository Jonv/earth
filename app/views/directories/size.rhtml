<h2>Contents of <%= @directory.server.name %>:<%= @directory.path %></h2>

<table>
  <tr>
  <th>Path</th>
  <th>Size</th>
  </tr>

  <tr>
  <td>Files in this directory</td>
  <td><%=h human_size @directory.size %></td>
  </tr>

<% for directory, size in @children_and_sizes %>
  <tr>
  <td><%= link_to_if directory.has_children?, directory.name, :action => :size, :id => directory %></td>
  <td><%=h human_size size %></td>
  </tr>
<% end %>
</table>

