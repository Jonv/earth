<h2>Contents of <%= @this_directory ? @this_directory.path : "all servers" %></h2>

<table>
  <tr>
  <th>Path</th>
  <th>Size</th>
  </tr>

<% if @this_directory %>
  <tr>
  <td>Files in this directory</td>
  <td><%=h human_size @this_directory.size %></td>
  </tr>
<% end %>

<% for directory in @directories %>
  <tr>
  <td><%= link_to_if directory.has_children?, directory.path, :action => :size, :id => directory %></td>
  <td><%=h human_size directory.recursive_size %></td>
  </tr>
<% end %>
</table>

